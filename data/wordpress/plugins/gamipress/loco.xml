<?xml version="1.0" encoding="utf-8"?>
<bundle name="GamiPress">
  <domain name="gamipress">
    <project name="GamiPress" slug="gamipress">
      <source>
        <directory>.</directory>
        <exclude>
          <directory>libraries</directory>
          <directory>languages</directory>
        </exclude>
      </source>
      <target>
        <directory>languages</directory>
      </target>
      <template locked="true">
        <file>languages/gamipress.pot</file>
      </template>
    </project>
  </domain>
  <domain name="cmb2">
    <project name="CMB2" slug="cmb2">
      <source>
        <directory>libraries/cmb2</directory>
        <exclude>
          <directory>libraries/cmb2/css</directory>
          <directory>libraries/cmb2/images</directory>
          <directory>libraries/cmb2/js</directory>
          <directory>libraries/cmb2/languages</directory>
        </exclude>
      </source>
      <target>
        <directory>libraries/cmb2/languages</directory>
      </target>
      <template>
        <file>libraries/cmb2/languages/cmb2.pot</file>
      </template>
    </project>
  </domain>
  <domain name="ct">
    <project name="CT" slug="ct">
      <source>
        <directory>libraries/ct</directory>
      </source>
      <target>
        <directory>libraries/ct</directory>
      </target>
      <template locked="true">
        <file>libraries/ct/ct.pot</file>
      </template>
    </project>
  </domain>
  <exclude>
    <directory>assets</directory>
  </exclude>
</bundle>
