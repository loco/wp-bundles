<?xml version="1.0" encoding="utf-8"?>
<bundle name="WooCommerce" min-version="4.0.0">
  <domain name="woocommerce">
    <project name="WooCommerce" slug="woocommerce">
      <source>
        <directory>.</directory>
      </source>
      <target>
        <directory base="WP_LANG_DIR">woocommerce</directory>
      </target>
      <template>
        <file base="WP_LANG_DIR">woocommerce/woocommerce.pot</file>
      </template>
    </project>
  </domain>
  <domain name="woocommerce-admin">
    <project name="WooCommerce Admin" slug="woocommerce-admin">
      <source>
        <directory>packages/woocommerce-admin</directory>
        <exclude>
          <directory>packages/woocommerce-admin/languages</directory>
        </exclude>
      </source>
      <target>
        <directory>packages/woocommerce-admin/languages</directory>
      </target>
      <template locked="true">
        <file>packages/woocommerce-admin/languages/woocommerce-admin.pot</file>
      </template>
    </project>
  </domain>
  <exclude>
    <directory>assets</directory>
    <directory>sample-data</directory>
    <directory>vendor</directory>
  </exclude>
</bundle>
